<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TopBar">
        <!-- left button-->
        <attr name="leftTextColor" format="color" />
        <attr name="leftText" format="string" />
        <attr name="leftBackground" format="reference|color" />

        <!-- right button-->
        <attr name="rightTextColor" format="color" />
        <attr name="rightText" format="string" />
        <attr name="rightBackground" format="reference|color" />

        <!-- text view-->
        <attr name="titleText" format="string" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleTextColors" format="color" />

        <attr name="titleTextColora" format="color" />
        <attr name="titles" format="string" />

    </declare-styleable>

    <declare-styleable name="MyTextView">

        <!-- 外部矩形颜色-->
        <attr name="outlineColor" format="color" />

        <!-- 内部矩形颜色-->
        <attr name="inlineColor" format="color" />

        <!-- 边距-->
        <attr name="stoke" format="dimension" />


    </declare-styleable>

    <declare-styleable name="TriGraph">

        <!-- 间距-->
        <attr name="gap" format="dimension" />

    </declare-styleable>


    <declare-styleable name="CustomTitleView">
        <attr name="customTitleText" format="string" />

        <attr name="customTitleTextSize" format="dimension" />

        <attr name="customTitleTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="customImageText" format="string" />

        <attr name="customImageTextSize" format="dimension" />

        <attr name="customImageTextColor" format="color" />

        <attr name="customImage" format="reference" />

        <attr name="customImageScaleType">
            <enum name="fillXY" value="0" />
            <enum name="center" value="1" />
        </attr>

    </declare-styleable>

    <declare-styleable name="CustomVolumeView">
        <attr name="hintColor" format="color" />
        <attr name="bgColor" format="color" />

        <attr name="dotCount" format="integer" />
        <attr name="ringWidth" format="dimension" />
        <attr name="splitSize" format="integer" />
        <attr name="bg" format="reference" />
    </declare-styleable>

    <declare-styleable name="MiSportsView">
        <attr name="arc_radius" format="dimension"/>
        <attr name="arc_color" format="color"/>
        <attr name="dot_radius" format="dimension"/>
        <attr name="dot_color" format="color"/>
    </declare-styleable>


</resources>