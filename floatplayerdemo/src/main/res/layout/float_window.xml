<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />


    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/button_close"
        android:src="@drawable/ic_highlight_off_black_24dp" />

    <ImageButton
        android:id="@+id/back_normal_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/button_back_to_normal"
        android:src="@drawable/ic_cloud_off_black_24dp" />

    <ImageButton
        android:id="@+id/paly_pause_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/button_play_pause"
        android:src="@drawable/ic_play_circle_filled_black_24dp" />

    <SeekBar
        android:id="@+id/position_seekbar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:progress="50"
        android:progressBackgroundTint="#000000"
        android:secondaryProgress="75"
        android:secondaryProgressTint="@color/colorAccent" />

</RelativeLayout>